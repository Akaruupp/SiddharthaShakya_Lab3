<UserControl x:Class="SiddharthaShakya_Lab3.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250" Height="150">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
        <StackPanel>
            <Label Content="Username" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" 
                     Text="{Binding Username, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

            <Label Content="Password" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
        </StackPanel>
    </Border>
</UserControl>
